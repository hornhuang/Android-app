<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Find">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="17.5dp"
            android:layout_weight="1"
            android:background="#00000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    实用工具"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#ff000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="17.5dp"
            android:background="#00000000"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/find_csdn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@drawable/csdn"
                    android:background="#00000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CSDN"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/find_niuke"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@drawable/niuke"
                    android:background="#00000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="牛客"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/find_chinaunix"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@drawable/chinaunix"
                    android:background="#00000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chinaunix"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/find_itpub"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@drawable/itpub"
                    android:background="#00000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Itpub"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#00000000"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/find_51cto"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@drawable/cto"
                    android:background="#00000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51Cto"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/find_落伍者"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@drawable/luowuzhe"
                    android:background="#00000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="落伍者"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/find_蓝色理想"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@drawable/lanselixiang"
                    android:background="#00000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蓝色理想"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/find_it写作社区"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@drawable/itxiezhuoshequ"
                    android:background="#00000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="It写作社区"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="17.5dp"
            android:background="#00000000"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#40c0c0c0"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="17.5dp"
                android:layout_weight="1"
                android:background="#00000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    我的订阅"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ff000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="#00000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="你还没有订阅任何专栏呦~"
                android:textColor="#80000000"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="17.5dp"
                android:layout_weight="1"
                android:background="#00000000"/>

            <Button
                android:id="@+id/go_to_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="去看看"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/shape_button"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="17.5dp"
            android:background="#00000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#40c0c0c0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="17.5dp"
            android:background="#00000000"/>


        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/roll_view_pager"
            android:layout_width="330dp"
            android:layout_height="155dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/environment_top_fragment"
            android:background="#ffc0c0c0"
            android:layout_gravity="center"
            app:rollviewpager_play_delay="2000"/>


    </LinearLayout>



    </ScrollView>

</android.support.v4.widget.DrawerLayout>